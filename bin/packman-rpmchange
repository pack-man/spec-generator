#!/bin/bash -e 
#===============================================================================
#          FILE: packman-rpmchange
#         USAGE: ./packman-rpmchange 
#   DESCRIPTION: update RPM spec with new version, revision and changelog 
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Jess Portnoy (), <jess@packman.io>
#  ORGANIZATION: Packman.
#       CREATED: 02/26/2016 03:27:57 PM GMT
#      REVISION:  ---
#===============================================================================
DIRNAME=`dirname $0`
if [ ! -r "$DIRNAME/packman-functions.rc" ];then
	echo "Missing $DIRNAME/packman-functions.rc. Something is wrong with your ENV. Exiting."
	exit 1
fi
. $DIRNAME/packman-functions.rc
if [ ! -r "$PACKMAN_HOME/etc/package.rc" ];then
	echo "Missing $PACKMAN_HOME/etc/package.rc. Something is wrong with your ENV. Exiting."
	exit 2
fi
. $PACKMAN_HOME/etc/package.rc

if [ $# -lt 2 ];then
        echo "Usage $0 <path/to/spec> <new ver> [new rev] [msg]"
        exit 1
fi
SPEC_FILE=$1
NEWVER=$2
if [ -n "$3" ];then
        REV=$3
        shift
else
        REV=1
fi
if [ -n "$3" ];then
        MSG=$3
else
        if [ -z "$EDITOR" ];then
                EDITOR=vi
        fi
        echo "Hit Enter to input your changelog message"
        read
        $EDITOR /tmp/MSG
        MSG=`cat /tmp/MSG|sed ':a;N;$!ba;s/\n/\\\\\n/g'`

fi

STAMP=`date "+%-a %b %-d %Y"`

sed -i "s@\(^Version:\)\s*.*\$@\1 $NEWVER@g" $SPEC_FILE
sed -i "s@\(^Release:\)\s*.*\$@\1 $REV@g" $SPEC_FILE
sed -i "s^\(%changelog\)^\1\n* $STAMP $MAINTAINER_NAME <$MAINTAINER_EMAIL> - $NEWVER-$REV\n- $MSG\n^" $SPEC_FILE
